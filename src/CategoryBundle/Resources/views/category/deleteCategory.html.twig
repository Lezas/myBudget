{% extends 'base.html.twig'  %}
{% block body %}
    <div class="col-md-6 col-md-offset-3 text-center">
        <div class="h2">Delete Category</div>
        {{ form_start(form, { 'attr' : {'class' : 'create_event_form'}}) }}

        <div class="form-group">
            {{ form_label(form.confirm) }}
            {{ form_errors(form.confirm) }}
            {{ form_widget(form.confirm, { 'attr' : { 'class' : 'form-control'}  }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.submit) }}
            {{ form_widget(form.submit, { 'attr' : { 'class' : 'btn btn-success btn-block'}  }) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock body %}