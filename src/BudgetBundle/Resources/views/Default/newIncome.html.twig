{% extends 'base.html.twig'  %}
{% block body %}
    <div class="col-md-6 col-md-offset-3 text-center">
        <div class="h2">New Income</div>
        {{ form_start(form, { 'attr' : {'class' : 'create_event_form'}}) }}
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_errors(form.name) }}
            {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control'}  }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.dateTime) }}
            <div class="input-group" id="time_input">
                {{ form_widget(form.dateTime, { 'attr' : {'class' : 'form-control' } }) }}
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-calendar"></i>
                </span>
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.money) }}
            {{ form_errors(form.money) }}
            {{ form_widget(form.money, { 'attr' : { 'class' : 'form-control number'}  }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.submit) }}
            {{ form_widget(form.submit, { 'attr' : { 'class' : 'btn btn-success btn-block'}  }) }}
        </div>
        {{ form_errors(form) }}
        {{ form_end(form) }}
    </div>
{% endblock body %}

{% block javascripts %}
    <script src="{{asset('bundles/Budget/js/createIncome.js')}}" type="text/javascript"></script>
{% endblock %}